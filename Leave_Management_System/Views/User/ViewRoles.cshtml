@model IEnumerable<Leave_Management_System.Data.Models.UserRole>
@{
    ViewData["Title"] = "Index";
}
<h1>Roles</h1>
<hr />
<table id="tblData" class="table">
    @*<thead>
        <tr>
        </tr>
    </thead>*@
    @*<tbody>*@
        @foreach (var item in Model)
        {
            <tr >
                @if (item.RoleId == 1)
                {
                    <td>
                        Admin
                    </td>
                }
                else if (item.RoleId == 2)
                {
                    <td>
                        Manager
                    </td>
                }
                else if (item.RoleId == 3)
                {
                    <td>
                        Employee
                    </td>
                }
                <td>
                        <div class="col-2">
                        <form asp-action="DeleteRole" asp-route-roleId="@item.RoleId" asp-route-userId="@item.UserId" method="post">
                                <button type="submit" title="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                </td>
            </tr>
        }
    @*</tbody>*@
</table>
<a class="btn btn-outline-primary" asp-action="AddRole" asp-route-userId="@ViewBag.UserId">Add Role</a>
<a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
@section Scripts{
    <script>
    </script>
}
