@model Leave_Management_System.Data.Models.User
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
             <input asp-for="EmployeeId" class="form-control" type="text" id="employeeId" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/> <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $("#createForm").submit(function () {
                var employeeId = $("#employeeId").val();
                employeeId = employeeId.replace(/\D/g, '');
                $("#employeeId").val(employeeId);
            });
        </script>
    }
}
