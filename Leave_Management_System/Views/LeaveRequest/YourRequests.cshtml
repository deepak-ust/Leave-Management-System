@model IEnumerable<Leave_Management_System.Data.Models.LeaveRequest>
@{
    ViewData["Title"] = "Index";
}
<h1>Your Requests</h1>
<hr />
<table id="tblData" class="table">
    <thead>
        <tr style="text-align: center">
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppliedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reverse())
        {
            <tr style="text-align: center">
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppliedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <a asp-action="YourRequestDetails" class="btn btn-warning" asp-route-id="@item.Id" title="View">
                                <i class="fas fa-eye" aria-hidden="true"></i>
                            </a>
                            </div>&nbsp &nbsp
                        @{
                            if (item.Status == "Pending")
                            {
                                          <div class="col-2">
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this request?')">
                                                <i class="fas fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </form>
                                    </div>  
                            }
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
    </script>
}
