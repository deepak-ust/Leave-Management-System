@model IEnumerable<Leave_Management_System.Data.Models.Rule>
@{
    ViewData["Title"] = "Index";
}
<h1>@ViewBag.LeaveType Rules</h1>
<hr />
<p>
    <a asp-action="CreateRule" asp-route-leaveTypeId="@ViewBag.LeaveTypeId" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr style="text-align: center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveCreditFrequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllowedLeaves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApplicable)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Band)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @if (item.LeaveCreditFrequency == 1)
                    {
                        <span>Monthly</span>
                    }
                    else if (item.LeaveCreditFrequency == 6)
                    {
                        <span>Half Yearly</span>
                    }
                    else if (item.LeaveCreditFrequency == 12)
                    {
                        <span>Yearly</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AllowedLeaves)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApplicable)
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <a asp-action="EditRule" class="btn btn-warning" asp-route-id="@item.Id">
                                <i class="fas fa-edit" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="col-4">
                            <form asp-action="DeleteRule" asp-route-id="@item.Id" asp-route-leaveTypeId="@item.LeaveTypeId" method="post">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
    </script>
}
