@model IEnumerable<Leave_Management_System.Data.Models.LeaveType>
@{
    ViewData["Title"] = "Index";
}
<h1>Leave Types</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr style="text-align: center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="row justify-content-center">
                        <div class="col-2">
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                                <i class="fas fa-edit" aria-hidden="true"></i>
                            </a>
                        </div>
                        <div class="col-2">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
    </script>
}
